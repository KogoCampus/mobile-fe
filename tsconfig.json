{
  "extends": "expo/tsconfig.base",
  "include": ["**/*.tsx", "**/*.ts", "**/*.d.ts", "src/lib/moduleResolver.js"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
        "@apps/*": ["src/apps/*"],
        "@components/*": ["src/components/*"],
        "@components": ["src/components/index"],
        "@hooks-api/*": ["src/hooks-api/*"],
        "@hooks-api": ["src/hooks-api/index"],
        "@hooks-context/*": ["src/hooks-context/*"],
        "@hooks-context": ["src/hooks-context/index"],
        "@navigation/*": ["src/navigation/*"],
        "@navigation": ["src/navigation/index"],
        "@screens/*": ["src/screens/*"],
        "@screens": ["src/screens/index"],
        "@lib/*": ["src/lib/*"],
        "@lib": ["src/lib/index"],
        "@assets/*": ["src/assets/*"],
        "@theme": ["src/theme/index"],
    },
  },
}
